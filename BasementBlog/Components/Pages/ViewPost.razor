@page "/viewPost/{postId:int}"

<MudContainer>
    <MudText Typo="Typo.h3">@PostTitle</MudText>
    <MudText Typo="Typo.h5">Publish Date: @PublishDate</MudText>
    <MudText Typo="Typo.body1">@((MarkupString)PostBody)</MudText>
    <!-- Save button -->
    <MudItem xs="12" Class="floating-button">
        <MudFab Color="MudBlazor.Color.Primary" OnClick="@EditPost" StartIcon="@Icons.Material.Filled.Edit" />
    </MudItem>
</MudContainer>
