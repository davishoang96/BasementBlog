@page "/postEditor";

<div class="container mt-5">
    <div class="row">
        <!-- Left Side - Input Fields -->

        <div class="col-md-12">
            <div class="form-group">
                <MudTextField @bind-Value="@PostTitle" Label="Title" Variant="Variant.Filled" Clearable="true"></MudTextField>
            </div>
            <div class="form-group">
                <MudTextField @bind-Value="@PostDescription" Label="Description" Variant="Variant.Filled" Clearable="true"></MudTextField>
            </div>
        </div>

        <div class="col-md-6">
            <form>
                
                <div class="form-group">
                    <MudTextField Immediate="true" Label="Filled" Variant="Variant.Filled" @bind-Value="@PostContent" AutoGrow />
                </div>
            </form>
        </div>

        <!-- Right Side - Preview -->
        <div class="col-md-6">
            <MudMarkdown Value="@PostContent"></MudMarkdown>
        </div>
    </div>
</div>