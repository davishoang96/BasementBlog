@page "/viewPost/{postId:int}"
@using BasementBlog.ViewModels;

<MudContainer>
    <MudText Typo="Typo.h3">@vm.PostTitle</MudText>
    <MudText Typo="Typo.h5">Publish Date: @vm.PublishDate</MudText>
    <MudText Typo="Typo.body1">@((MarkupString)vm.PostBody)</MudText>
    <!-- Save button -->
    <MudItem xs="12" Class="floating-button">
        <MudFab Color="MudBlazor.Color.Primary" OnClick="@vm.EditPost" StartIcon="@Icons.Material.Filled.Edit" />
    </MudItem>
</MudContainer>

@code
    {
    [Inject]
    private PostViewModel vm { get; set; }

    [Parameter]
    public int PostId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await vm.GetPostById(PostId);
    }
} 